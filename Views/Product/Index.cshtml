@{
    ViewData["Title"] = "Quản Lý Sản Phẩm";
}

@* Thêm link Bootstrap và CSS tùy chỉnh *@
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Phần container */
        .container {
            margin-top: 50px;
        }

        /* Tiêu đề trang */
        h2 {
            font-size: 36px;
            font-weight: 600;
            color: #007bff;
            margin-bottom: 30px;
        }

        /* Nút Thêm Sản Phẩm */
        .btn-primary {
            background-color: #28a745;
            border-color: #28a745;
            color: white;
        }

        .btn-primary:hover {
            background-color: #218838;
            border-color: #218838;
        }

        /* Bảng sản phẩm */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table th, table td {
            padding: 15px;
            text-align: center;
            vertical-align: middle;
        }

        table th {
            background-color: #f8f9fa;
            color: #495057;
            font-weight: 600;
        }

        table td {
            background-color: #ffffff;
            border: 1px solid #dee2e6;
        }

        /* Nút hành động (Sửa, Xóa) */
        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
            color: white;
        }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #e0a800;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            color: white;
        }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

        /* Hiệu ứng hover trên hàng trong bảng */
        tbody tr:hover {
            background-color: #f1f1f1;
            cursor: pointer;
        }
    </style>
</head>

<div class="container">
    <h2>Danh Sách Sản Phẩm</h2>
    <p>
        <a href="@Url.Action("Create", "Product")" class="btn btn-primary">
            Thêm Sản Phẩm Mới
        </a>
    </p>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Số thứ tự</th>
                <th>Tên Sản Phẩm</th>
                <th>Mô Tả</th>
                <th>Giá</th>
                <th>Số Lượng</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price</td>
                    <td>@product.Quantity</td>
                    <td>
                        <a href="@Url.Action("Edit", "Product", new { id = product.Id })" class="btn btn-warning">Sửa</a>
                        <a href="@Url.Action("Delete", "Product", new { id = product.Id })" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?')">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@* Thêm phần Script cho Bootstrap *@
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
