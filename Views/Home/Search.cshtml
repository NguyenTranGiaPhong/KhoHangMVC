@using System.Linq
@model List<KhoHangMVC.Models.Stock>

<h2 class="text-center mb-4 text-primary">Kết Quả Tìm Kiếm: <span>@ViewData["SearchQuery"]</span></h2>

@if (Model != null && Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-hover shadow-lg rounded-lg">
            <thead class="thead-dark">
                <tr>
                    <th>Số thứ tự</th>
                    <th>Tên Sản Phẩm</th>
                    <th>Số Lượng</th>
                    <th>Giá</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var stock in Model)
                {
                    <tr class="table-row">
                        <td>@stock.Id</td>
                        <td>@stock.ProductName</td>
                        <td>@stock.Quantity</td>
                        <td>@stock.Price.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-center text-danger">Không tìm thấy sản phẩm nào với từ khóa "<span>@ViewData["SearchQuery"]</span>".</p>
}
