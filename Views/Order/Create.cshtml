@{
    ViewData["Title"] = "Thêm Đơn Hàng";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Thêm Đơn Hàng Mới</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post">
                <!-- Tên khách hàng -->
                <div class="form-group mb-3">
                    <label for="CustomerName" class="form-label">Tên Khách Hàng</label>
                    <input type="text" class="form-control" id="CustomerName" name="CustomerName" placeholder="Nhập tên khách hàng" required />
                    <div class="invalid-feedback">Vui lòng nhập tên khách hàng.</div>
                </div>

                <!-- Ngày đặt -->
                <div class="form-group mb-3">
                    <label for="OrderDate" class="form-label">Ngày Đặt</label>
                    <input type="date" class="form-control" id="OrderDate" name="OrderDate" required />
                    <div class="invalid-feedback">Vui lòng chọn ngày đặt.</div>
                </div>

                <!-- Tổng tiền -->
                <div class="form-group mb-3">
                    <label for="TotalAmount" class="form-label">Tổng Tiền</label>
                    <input type="number" class="form-control" id="TotalAmount" name="TotalAmount" placeholder="Nhập tổng tiền" required />
                    <div class="invalid-feedback">Vui lòng nhập tổng tiền.</div>
                </div>

                <!-- Tình trạng đơn hàng -->
                <div class="form-group mb-3">
                    <label for="Status" class="form-label">Tình Trạng</label>
                    <input type="text" class="form-control" id="Status" name="Status" placeholder="Nhập tình trạng đơn hàng" required />
                    <div class="invalid-feedback">Vui lòng nhập tình trạng đơn hàng.</div>
                </div>

                <!-- Nút lưu -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Lưu Đơn Hàng</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap JS và validation script -->
@section Scripts {
    <script>
        // Enable Bootstrap validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
