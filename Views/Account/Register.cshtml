@model KhoHangMVC.Models.RegisterViewModel

@{
    ViewData["Title"] = "Đăng Ký";
}

<style>
    /* Tạo nền đẹp cho trang đăng ký */
    .container {
        max-width: 600px;
        margin-top: 50px;
        margin-bottom: 50px;
        padding-left: 15px;
        padding-right: 15px;
    }

    /* Tiêu đề trang đăng ký */
    h2 {
        font-size: 2rem;
        font-weight: 700;
        text-align: center;
        color: #007bff;
    }

    /* Form đẹp mắt với góc bo tròn, bóng đổ */
    form {
        background-color: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Các trường nhập liệu dễ sử dụng */
    .form-control {
        border-radius: 8px;
        padding: 12px 18px;
        font-size: 1.1rem;
        border: 1px solid #ccc;
    }

    /* Button đăng ký đẹp mắt */
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 12px 20px;
        font-size: 1.1rem;
        border-radius: 8px;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    /* Thông báo lỗi */
    .alert-danger {
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
        padding: 15px;
        border-radius: 8px;
        margin-top: 20px;
    }

        .alert-danger p {
            margin-bottom: 0;
        }

    /* Liên kết đăng nhập */
    .link-primary {
        color: #007bff;
        text-decoration: none;
    }

        .link-primary:hover {
            text-decoration: underline;
        }

    /* Cải thiện sự linh hoạt của form và button */
    .container form {
        width: 100%;
        box-sizing: border-box;
        padding: 30px;
    }

    /* Cải thiện form cho các màn hình nhỏ hơn mà không sử dụng media query */
    .form-control {
        width: 100%;
        margin-bottom: 1rem;
    }

    /* Cải thiện button đăng ký cho mọi kích thước */
    .btn-primary {
        font-size: 1.1rem;
        padding: 12px 20px;
        border-radius: 8px;
        width: 100%;
        max-width: 100%;
    }

    /* Thiết kế linh hoạt cho các phần tử */
    .container {
        max-width: 100%;
        padding-left: 15px;
        padding-right: 15px;
    }

    .form-control {
        font-size: 1rem;
        padding: 10px;
    }

    /* Chỉnh sửa form khi màn hình nhỏ hơn */
    .form-group {
        margin-bottom: 1.5rem;
    }
</style>

<div class="container my-5">
    <h2 class="text-primary mb-4">Đăng Ký</h2>

    <form method="post" class="shadow-lg p-4 bg-white rounded">
        <div class="form-group mb-3">
            <label for="Username" class="form-label">Tên Đăng Nhập</label>
            <input type="text" id="Username" name="Username" class="form-control form-control-lg" value="@Model?.Username" required placeholder="Nhập tên đăng nhập" />
        </div>

        <div class="form-group mb-3">
            <label for="Password" class="form-label">Mật Khẩu</label>
            <input type="password" id="Password" name="Password" class="form-control form-control-lg" required placeholder="Nhập mật khẩu" />
        </div>

        <div class="form-group mb-3">
            <label for="ConfirmPassword" class="form-label">Xác Nhận Mật Khẩu</label>
            <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control form-control-lg" required placeholder="Xác nhận mật khẩu" />
        </div>

        <button type="submit" class="btn btn-primary btn-lg px-4 py-2">Đăng Ký</button>
    </form>

    <p class="mt-3 text-center">
        Đã có tài khoản? <a href="@Url.Action("Login", "Account")" class="link-primary">Đăng nhập</a>
    </p>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-4">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }
</div>
